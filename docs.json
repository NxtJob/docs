{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "NxtJob.ai",
  "colors": {
    "primary": "#0D5CDF",
    "light": "#0D5CDF",
    "dark": "#0D5CDF"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Resume Builder",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "resume-builder/introduction",
              "resume-builder/dashboard",
              "resume-builder/managing-resumes"
            ]
          },
          {
            "group": "Builder & Scoring",
            "pages": [
              "resume-builder/builder",
              "resume-builder/resume-score",
              "resume-builder/ats-score"
            ]
          },
          {
            "group": "Advanced",
            "pages": [
              "resume-builder/ai-features",
              "resume-builder/sections-guide",
              "resume-builder/pro-tips"
            ]
          }
        ]
      },
      {
        "tab": "Job Board",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "job-board/introduction",
              "job-board/recommendations"
            ]
          },
          {
            "group": "My Jobs",
            "pages": [
              "job-board/my-jobs",
              "job-board/job-details",
              "job-board/find-network"
            ]
          },
          {
            "group": "Boards",
            "pages": [
              "job-board/target-companies",
              "job-board/recruitment-agencies",
              "job-board/archived-jobs"
            ]
          },
          {
            "group": "Networking",
            "pages": [
              "job-board/my-networks",
              "job-board/linkedin-automation"
            ]
          },
          {
            "group": "Nova",
            "pages": [
              "job-board/nova-chat"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.nxtjob.ai",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@nxtjob.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Try NxtJob",
      "href": "https://resume.nxtjob.ai"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  }
}
